<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICANHELPCalculator.LoginPage">
   
        <!--LOGIN PAGE-->
        <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.7,1" EndPoint="0,1.2">
                    <GradientStop Color="Indigo"  Offset="0.05"/>
                    <GradientStop Color="Lime" Offset="0.08"/>
                    <GradientStop Color="Indigo"  Offset="0.5"/>
                    <GradientStop Color="Yellow" Offset="1.5"/>
                    <GradientStop Color="DeepSkyBlue"  Offset="1.01"/>


            </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <!--Logo-->
                <RowDefinition Height="2*"/>
                <!--Login-->
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <!--Logo-->
            <Image
            Source="ICanHelp"
            Grid.Row="0"
            VerticalOptions="StartAndExpand"
            HorizontalOptions="Center"
            Grid.Column="0" />
            <!--Email/password-->
            <StackLayout
            Grid.Row="1"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            Spacing="15">
                <StackLayout HorizontalOptions="Center" Spacing="5">
                    <Label
                    x:Name="Email"
                    Text="Email"
                    TextColor="White"/>
                    <Entry
                    x:Name="GetEmail"
                    Text="{Binding Email}"
                    Keyboard="Email"
                    WidthRequest="300"
                    BackgroundColor="White"/>
                </StackLayout>
                <StackLayout>
                    <Label
                    x:Name="Password"
                    Text="Password"
                    TextColor="White"/>
                    <Entry
                    x:Name="GetPassword"
                    Text="{Binding Password}"
                    WidthRequest="300"
                    IsPassword="True"
                    BackgroundColor="White"  />
                </StackLayout>
            </StackLayout>
            <!--Buttons-->
            <StackLayout
            Grid.Row="1"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Margin="10,0,0,10"
            Spacing="15">
                <Button
                x:Name="ForgotPassword"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Text="Forgot Your Password?"
                TextColor="White"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                HeightRequest="35"
                Clicked="ForgotButtonClicked"/>
                <Button
                x:Name="NeedAccount"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Text="Need an Account?"
                TextColor="White"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                HeightRequest="35"
                Clicked="RegButtonClicked"/>
                <Button
                x:Name="SubmitButton"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Text="Submit"
                HorizontalOptions="Center"
                VerticalOptions="End"
                BackgroundColor="ForestGreen"
                TextColor="White"
                Margin="15,10"
                CornerRadius="10"
                BorderColor="Transparent"
                FontSize="Large"
                Clicked="SubmitButtonClicked"/>
            </StackLayout>
        </Grid>
    </ContentPage>